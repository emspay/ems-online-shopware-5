<?xml version="1.0" encoding="utf-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/shopware/shopware/5.3/engine/Shopware/Components/Plugin/schema/config.xsd">
    <elements>
        <element required="true" type="text" scope="locale">
            <name>emsonline_apikey</name>
            <label lang="de">EMS Online API-Schlüssel</label>
            <label lang="en">EMS Online API-Key</label>
            <label lang="nl">EMS Online API-sleutel</label>
            <label lang="nl">EMS Online Clé API</label>
            <description lang="de">EMS PAY API Schlüssel ist erforderlich. Duplizieren Sie Ihre ENS PAY API Schlüssel von Merchant Portal.</description>
            <description lang="en">EMS PAY API key is required. Duplicate your ENS PAY API keys from Merchant Portal.</description>
            <description lang="nl">EMS PAY API-sleutel is vereist. Dupliceer uw ENS PAY API-sleutels van Merchant Portal.</description>
            <description lang="fr">La clé API EMS PAY est requise. Dupliquez vos clés API ENS PAY à partir du portail marchand.</description>
        </element>
        <element type="boolean" scope="locale">
            <name>emsonline_bundle_cacert</name>
            <label>EMS Online CaCert</label>
            <value>true</value>
            <description lang="de">cURL CA bündel benutzen.</description>
            <description lang="en">Use the cURL CA bundle.</description>
            <description lang="nl">Gebruik de cURL CA-bundle.</description>
            <description lang="fr">Utilisez le bundle cURL CA.</description>
        </element>
        <element type="boolean" scope="locale">
            <name>emsonline_webhook</name>
            <label>EMS Online Webhook</label>
            <value>true</value>
            <description lang="de">Verwenden Sie den Webhook</description>
            <description lang="en">Use the cURL CA bundle.</description>
            <description lang="nl">Gebruik de webhook</description>
            <description lang="fr">Utilisez le webhook</description>
        </element>
    </elements>
</config>